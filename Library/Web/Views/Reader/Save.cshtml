@model BookDto

@{
	ViewBag.Title = "Save";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
	<link href="~/assets/css/pages/wizard/wizard-4.css" rel="stylesheet" type="text/css" />
	<link rel="stylesheet" type="text/css" href="~/assets/css/jquery.datetimepicker.css" />
}
@section Scripts
{
	<script src="~/assets/js/pages/custom/user/add-user.js" type="text/javascript"></script>
}

<div class="kt-portlet kt-portlet--mobile">
	<div class="kt-portlet__head kt-portlet__head--lg">
		<div class="kt-portlet__head-label">
			<span class="kt-portlet__head-icon">
				<em class="kt-font-brand flaticon2-line-chart"></em>
			</span>
			<h3 class="kt-portlet__head-title">
				@if (Model != null && Model.Book.InTheLibrary == false)
				{
					<label>Update Borrower</label>
				}
				else
				{
					<label>Lend a Book</label>
				}
			</h3>
		</div>
		<div class="kt-portlet__head-toolbar">
			<div class="kt-portlet__head-wrapper" margin="2px">
				<div class="kt-portlet__head-actions">
					<a href="~/Book/Save" class="btn btn-brand btn-elevate btn-icon-sm">
						<em class="la la-plus"></em>
						Insert Book
					</a>
					<a href="~/Book/List" class="btn btn-brand btn-elevate btn-icon-sm">
						<em class="la la-angle-down"></em>
						List Book
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="kt-portlet__body">
		<form asp-action="Save" asp-controller="Reader" method="post" class="kt-form" enctype="multipart/form-data">
			<div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
				<div class="row align-items-center">
					<div class="col-xl-8 order-2 order-xl-1">
						<div class="row align-items-center">
							<div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
								<div class="kt-input-icon kt-input-icon--left">
									@if (ViewData.ModelState.ErrorCount > 0)
									{
										<div class="alert alert-danger" asp-validation-summary="All">
										</div>
									}
									else if (Model.Success == false)
									{
										<div class="alert alert-info"> Tüm alanların dolu olmasına dikkat ediniz.</div>
									}
								</div>
							</div>
						</div>
					</div>
				</div>
				<!--end: Uyari Form -->
			</div>
			@if (Model.Success == true)
			{
				<div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
					<div class="row align-items-center">
						<div class="col-xl-8 order-2 order-xl-1">
							<div class="row align-items-center">
								<div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
									<div class="kt-input-icon kt-input-icon--left">
										<div class="alert alert-success"> Kayıt başarılı.</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!--end: Uyari Form -->
				</div>
			}
			<!--begin: Search Form -->
			<div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
				<div class="row align-items-center">
					<div class="col-xl-8 order-2 order-xl-1">
						<div class="row align-items-center">
							<div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
								@if (Model != null && Model.Book.UserReading.ReaderID > 0)
								{
									<input type="text" class="form-control" hidden="hidden" asp-for="Book.UserReading.Reader.ID">
									<input type="text" class="form-control" hidden="hidden" asp-for="Book.UserReading.Reader.InsertionDate">
									<input type="text" class="form-control" hidden="hidden" asp-for="Book.UserReading.Reader.UpdateDate">
								}
								<div class="form-group row">
									<label class="col-xl-3 col-lg-3 col-form-label">Kitap ID</label>
									<div class="col-lg-9 col-xl-9">
										<input class="form-control" type="text" asp-for="Book.ID">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-xl-3 col-lg-3 col-form-label">Kitap İsmi</label>
									<div class="col-lg-9 col-xl-9">
										<input class="form-control" type="text" asp-for="Book.Name">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-xl-3 col-lg-3 col-form-label">Kitabın Yazarı</label>
									<div class="col-lg-9 col-xl-9">
										<input class="form-control" type="text" asp-for="Book.Author">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-xl-3 col-lg-3 col-form-label">Ödünç Alanın İsmi</label>
									<div class="col-lg-9 col-xl-9">
										<input class="form-control" type="text" asp-for="Book.UserReading.Reader.ReaderName">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-xl-3 col-lg-3 col-form-label">Ödünç Alanın Soyismi</label>
									<div class="col-lg-9 col-xl-9">
										<input class="form-control" type="text" asp-for="Book.UserReading.Reader.ReaderSurname">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-xl-3 col-lg-3 col-form-label">Telefon Numarası</label>
									<div class="col-lg-9 col-xl-9">
										<input class="form-control" type="text" asp-for="Book.UserReading.Reader.PhoneNumber">
									</div>
								</div>
								@if (Model != null && Model.Book.UserReading.ReaderID > 0)
								{
									<div class="form-group row">
										<label class="col-xl-3 col-lg-3 col-form-label"> Status <span color="red"></span> </label>
										<div class="col-lg-9 col-xl-9">
											<select asp-for="Book.UserReading.Reader.Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusCodes>()"></select>
										</div>
									</div>
								}
								<div class="form-group row">
									<label class="col-xl-3 col-lg-3 col-form-label">Expiration Date</label>
									<div class="col-lg-9 col-xl-9">
										<div class="input-group date" id="kt_datetimepicker_1" data-target-input="nearest">
											<input id="expirationDate" class="form-control" asp-for="ExpirationDate" size="16" type="text" style="cursor: pointer">
										</div>
									</div>
								</div>
								<div class="form-actions">
									<div class="row">
										<div class="col-md-3 col-md-10">
											<input type="submit" value="Submit" class="btn btn-brand btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u" />
										</div>
									</div>
									<br />
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
		<!--end: Search Form -->
	</div>
</div>


<script src="~/assets/lib/jquery/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/assets/css/jquery.datetimepicker.css" />
<script src="~/assets/js/jquery.datetimepicker.full.min.js"></script>
<script src="~/assets/DataTable/datatables.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.5/xlsx.full.min.js"></script>

<script>
	$(document).ready(function () {
		$("#downloadButton").on("click", function () {
			var startDate = $("#expirationDate").val();
			var endDate = $("#endDate").val();
		});
	});
	$('#expirationDate').datetimepicker({
		format: 'Y-m-d H:i',
		lang: 'tr',
		step: 5,
		dayOfWeekStart: 1
	});
	$('#endDate').datetimepicker({
		format: 'Y-m-d H:i',
		lang: 'tr',
		step: 5,
		dayOfWeekStart: 1
	});
</script>



